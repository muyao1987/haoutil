root = true #表示是最顶层的配置文件，发现设为true时，才会停止查找.editorconfig文件

# 匹配全部文件
[*]
# 缩进风格，可选"space"、"tab"
indent_style = space
# 缩进的空格数
indent_size = 2
# 结尾换行符
end_of_line = lf
# 设置字符集
charset = utf-8
# 删除一行中的前后空格
trim_trailing_whitespace = true
# 在文件结尾插入新行
insert_final_newline = true
max_line_length = 150

[*.md]
# 删除一行中的前后空格
trim_trailing_whitespace = false
